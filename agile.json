{
    "github": {
        "pulsar": {
            "python_module": "pulsar",
            "version": "pulsar.__version__",
            "release_notes": "docs/source/history"
        }
    },
    "shell": {
        "pulsar": {
            "command": [
                "rm -rf dist",
                "{{ python }} setup.py sdist bdist_wheel upload"
            ]
        }
    },
    "tasks": {
        "release": {
            "description": "make a new release to github",
            "command": ["github:pulsar"]
        }
    }
}
